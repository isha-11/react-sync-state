{
  "testEnvironment": "jsdom",
  "setupFilesAfterEnv": ["<rootDir>/src/test-setup.ts"],
  "coverageReporters": ["json-summary", "lcov", "text"],
  "collectCoverageFrom": [
    "src/react-sync-state/*.{js,jsx,ts,tsx}",
    "!<rootDir>/node_modules/"
  ],
  "coverageThreshold": {
    "global": {
      "lines": 100,
      "branches": 100,
      "functions": 100,
      "statements": 100
    }
  }
}
